                        <div class="form-group">
                            @* "asp-action" nedan står för actionmetoden i controllern *@
                            <button asp-controller="Accounts" asp-action="Login" class="btn btn-info btn-lg btn-block">Logga In</button>
                        </div>
                        <div class="form-group">
                            <button asp-controller="Accounts" asp-action="Register" class="btn btn-info btn-lg btn-block">Registrera</button>
                        </div>
                        <div class="form-group">
                            <button asp-controller="Accounts" asp-action="Typescript" class="btn btn-info btn-lg btn-block">TypeScript</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

